<Window x:Class="Задание__11.Assets.MyWindows.SaveFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Задание__11.Assets.MyWindows" mc:Ignorable="d" SizeToContent="WidthAndHeight"
        Title="Сохранить файл" Height="150" Width="310" ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Файл: " Width="35" Height="20" Margin="10,30,265,84" />
        <TextBox Name="FileNameBox" Width="170" Height="20" Margin="50,30,90,84" />
        <Button Content="Выбрать" Width="60" Height="20" Margin="225,30,25,84" Click="ClickForSelectFile"/>
        <TextBlock Text="Кодировка: " Width="70" Height="20" Margin="10,55,230,59" />
        <Menu Width="200" Height="20" Margin="85,55,25,59">
            <MenuItem Name="MainHeader" Header="Кодировка">
                <MenuItem Header="Windows-1251" Click="Windows1251Click" />
                <MenuItem Header="Unicode" Click="UnicodeClick" />
            </MenuItem>
        </Menu>
        <Button Content="Сохранить" Height="20" Width="100" Click="SelectedClick"  Margin="185,80,25,34" />
    </Grid>
</Window>
